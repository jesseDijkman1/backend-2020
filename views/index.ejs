<h1>Hello <%= userName %></h1>

<% if ( !!userId ) { %>
  <form action="/logout" method="POST">
    <button>Logout</button>
  </form>
<% } %>


<main>
  <% if (otherUsers.length > 0) { %>
    <ul class="user-cards">
      <% otherUsers.forEach((otherUser) => { %>
        <li class="user-card user">
          <% if (otherUser.gender == "male") { %>
            <img src="https://w7.pngwing.com/pngs/980/886/png-transparent-male-portrait-avatar-computer-icons-icon-design-avatar-flat-face-icon-people-head-cartoon.png ">
          <% } else { %>
            <img src="https://image.flaticon.com/icons/png/512/219/219969.png">
          <% } %>
          
          <h3 class="user__name"><%= otherUser.name %></h3>
          <h4 class="user__age"><%= otherUser.age %></h4>


          <form class="user-form" action="/user/like" method="POST">
            <input type="hidden" name="userId" value="<%= userId %>">
            <input type="hidden" name="otherUserId" value="<%= otherUser._id %>">
            <button type="submit" class="user__button--like">Like</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } %>
</main>