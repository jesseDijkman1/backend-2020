<form action="/giphy/search" method="POST">
  <input type="hidden" name="matchId" value="<%= matchId %>">
  <input type="hidden" name="userId" value="<%= userId %>">

  <input name="query" type="text" placeholder="Search ...">
  <button type="submit">Search</button>
</form>

<form action="/chat/message/giphy" method="POST">
  <input type="hidden" name="matchId" value="<%= matchId %>">
  <input type="hidden" name="userId" value="<%= userId %>">

  <% giphies.forEach(giphy => { %>
      <label for="<%= giphy.id %>">Select giphy</label>
      <input type="radio" name="giphySrc" value="<%= giphy.src %>" id="<%= giphy.id %>">
      
      <img src="<%= giphy.src %>" alt="<%= giphy.alt %>">
  <% }) %>
  <button type="submit">Send giphy</button>
</form>