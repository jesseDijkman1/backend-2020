<header>
  <h4><%= otherUser.name %></h4>
</header>
<main>
  <ul>
    <% messages.forEach(message => { %>
      <li class="message <% if (message.userId == userId) { %>message--mine<% } %>">
        <% if (message.content == null && !!message.giphySrc) { %>
          <img src="<%= message.giphySrc %>">
        <% } else { %>
        <p><%= message.content %></p>
        <small><%= message.date %></small>
        <% } %>
      </li>
    <% }) %>
  </ul>
</main>

<div id="giphy-grid" data-user-id="<%= userId %>" data-match-id="<%= matchId %>">None found</div>

<footer>

  
  <button id="giphy-open">GIPHY</button>
  <input id="giphy-search-input" type="text">

  <form action="/message" method="POST">
    <input type="hidden" name="chatId" value="<%= matchId %>">
    <input type="hidden" name="userId" value="<%= userId %>">
    <input type="text" name="text">
    <button type="submit">Send</button>
  </form>

  
    

    
    
  
</footer>