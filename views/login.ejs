<main class="user-form">
  <form class="user-form__form" action="login" method="POST">
    <div class="user-form__field <% if (errors.includes("email")) { %> error <% } %>">
      <label class="user-form__field-label" for="email">Email</label>
      <input class="user-form__field-input" value="piet@live.nl" id="email" type="email" name="email" value="<%= values.email %>" />
    </div>

    <div class="user-form__field <% if (errors.includes("password")) { %> error <% } %>">
      <label class="user-form__field-label" for="password">Password</label>
      <input class="user-form__field-input" value="123" id="password" type="password" name="password" />
    </div>

    <button class="user-form__submit" type="submit">Login</button>
  </form>

  <footer class="user-form__footer">
    <p>Don't have an account? <a href="/register">Register</a></p>
  </footer>
</main>
